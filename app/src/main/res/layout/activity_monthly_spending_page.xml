            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/UtilSpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp"
            app:layout_constraintEnd_toStartOf="@+id/SubscriptionsSpinner" android:layout_marginEnd="66dp"
