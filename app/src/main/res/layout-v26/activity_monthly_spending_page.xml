<?xml version="1.0" encoding="utf-8"?>
<!--
    Joseph Kelly
    CIT295 Budget Butler
    Splash page for Budget Butler ticket# 164358276
-->
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MonthlySpendingPage">


    <!-- Main title that is centered-->
    <TextView
            android:text="@string/appTitle"
            android:layout_width="321dp"
            android:layout_height="55dp"
            android:id="@+id/appTitle" app:fontFamily="@font/atomic_age"
            android:textSize="36sp"
            android:gravity="center" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.432" app:layout_constraintVertical_bias="0.074"/>
    <!-- Page title -->
    <TextView
            android:text="@string/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitle" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.152"/>

    <!-- Add expense button
    ticket# 163988233-->
    <ImageButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:contentDescription="@string/btnExpenseTitle"/>

    <!--add expense label
    ticket# 163988233 (same as above)-->
    <TextView
            android:text="@string/btnExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addExpense"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/FoodSpinner"
            app:layout_constraintBottom_toTopOf="@+id/imageButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="164dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <!-- Rent dropdown for storage/display
    *needs default value which states "rent"*
    ticket# 163988143-->
    <Spinner android:layout_width="100dp"
             android:layout_height="50dp"
             android:id="@+id/RentSpinner"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="69dp" app:layout_constraintEnd_toStartOf="@+id/PurchasesSpinner"
             android:layout_marginEnd="66dp" android:layout_marginRight="66dp" android:layout_marginTop="365dp"
             app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="316dp"/>

    <!--Utilities dropdown for storage/display
    *needs default value which states "Utilities"*
    ticket# 163988175-->
    <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/UtilSpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="69dp"
            app:layout_constraintEnd_toStartOf="@+id/SubscriptionsSpinner" android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="414dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="267dp"/>

    <!--Food dropdown for storage/display
    *needs default value which states "Food"*
    ticket# 163988157-->
    <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/FoodSpinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="464dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="217dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp" android:layout_marginEnd="242dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!--Purchases dropdown for storage/display
    *needs default value which states "Purchases"*
    ticket# 163988193-->
    <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/PurchasesSpinner"
            android:layout_marginTop="364dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RentSpinner"
            android:layout_marginBottom="317dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <!--Subscriptions dropdown for storage/display
    *needs default value which states "Subscriptions"*
    ticket# 164358970-->
    <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/SubscriptionsSpinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="414dp" android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="235dp" android:layout_marginStart="235dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="267dp"/>

    <!--Misc dropdown for storage/display
    *needs default value which states "Misc"*
    ticket# 164359017-->
    <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/MiscSpinner"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="464dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="217dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="235dp"
            android:layout_marginStart="235dp" android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dropdown to select which storage dropdown to store expense to
    ticket ##164853881-->
    <Spinner
            android:layout_width="118dp"
            android:layout_height="28dp"
            android:id="@+id/AddToSpinner"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="46dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/addExpense"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/txtNameExpense" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addExpense" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/AddToSpinner"
            app:layout_constraintStart_toEndOf="@+id/imageButton" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:importantForAutofill="no"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="@string/txtCost" app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/AddToSpinner"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>